@page
@model Abby.Pages.Categories.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; New Category
            </a>
        </div>
    </div>
    
    <br /><br />

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="col-4">Category Name</th>
                <th class="col-3">Display Order</th>
                <th class="col-3">Date Created</th>
                <th class="col-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td class="col-4">@category.Name</td>
                    <td class="col-3">@category.DisplayOrder</td>
                    <td class="col-3">@category.CreatedDateTime.ToShortDateString()</td>
                    <td class="col-2">
                        <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>