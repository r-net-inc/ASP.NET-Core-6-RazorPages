@page
@model Abby.Pages.Categories.IndexModel

@if (TempData["success"] != null)
{
    <h2 class="text-success">@TempData["success"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; New Category
            </a>
        </div>
    </div>
    
    <br /><br />

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th class="col-5">Category Name</th>
                <th class="col-2">Display Order</th>
                <th class="col-3">Date Created</th>
                <th class="col-2 text-center">Edit | Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>@category.CreatedDateTime.ToShortDateString()</td>
                    <td class="text-center">
                        <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        |
                        <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>