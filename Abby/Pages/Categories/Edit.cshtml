@page
@model Abby.Pages.Categories.EditModel

<form method="post">
	<input hidden asp-for="Category.Id" />
	<div class="border p-3 mt-4 col-6">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Edit Category</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All" class="text-danger"></div>*@
		<div class="mb-3">
			<label asp-for="@Model.Category.Name"></label>
			<input asp-for="Category.Name" class="form-control" />
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Category.DisplayOrder"></label>
			<input asp-for="Category.DisplayOrder" class="form-control" />
			<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
		<a class="btn btn-danger" asp-page="Index" style="width:150px;">Cancel</a>
	</div>
</form>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}